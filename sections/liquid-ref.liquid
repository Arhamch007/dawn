<h1>{{ section.settings['liquid-ref'] }}</h1>

{% if section.settings.checkbox == true %}
  <h2>checkbox checked</h2>
{% else %}
  <h2>checkbox not checked</h2>
{% endif %}

{% if section.settings.number != 0 %}
  {{ section.settings.number }}
{% endif %}

{% assign selected_value = section.settings.radio %}

{% for option in section.settings.radio.options %}
  {% if option.value == selected_value %}
    {{ option.label }}
  {% endif %}
{% endfor %}

{% schema %}
{
  "name": "Liquid Reference",
  "settings": [
    {
      "id": "liquid-ref",
      "type": "text",
      "label": "A Reference for Shopify Liquid"
    },
    {
      "id": "checkbox",
      "type": "checkbox",
      "label": "A checkbox"
    },
    {
      "id": "number",
      "type": "number",
      "label": "enter you number"
    },
    {
      "id": "radio",
      "type": "radio",
      "label": "Radio Number",
      "options": [
        {
          "value": "option-1",
          "label": "Option 1"
        },
        {
          "value": "option-2",
          "label": "Option 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Liquid Reference",
      "category": "index"
    }
  ]
}
{% endschema %}
